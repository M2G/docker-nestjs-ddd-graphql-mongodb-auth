{
  "name": "docker-nestjs-ddd-graphql-mongodb-auth",
  "version": "1.0.0",
  "description": "A simple API using Docker, NestJS, GraphQL, Typescript, Redis and MongoDB (with Domain Driven Design)",
  "main": "index.ts",
  "_moduleAliases": {
    "auth": "./build/auth",
    "common": "./build/common",
    "modules": "./build/modules",
    "database": "./build/database"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build-ts && npm run lint",
    "serve": "node --harmony-top-level-await build/index.js",
    "watch-node": "nodemon build/index.js",
    "watch": "NODE_ENV=development concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run build:watch\" \"npm run watch-node\"",
    "watch:test": "NODE_ENV=test concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run build:watch\" \"npm run watch-node\"",
    "format": "prettier --write \\\"src/**/*.ts\\\" \\\"test/**/*.ts\\\"",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "build-ts": "tsc",
    "build:watch": "tsc -w",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "author": "M2G",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/M2G/docker-nestjs-ddd-graphql-postgresql/issues"
  },
  "homepage": "https://github.com/M2G/docker-nestjs-ddd-graphql-postgresql#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/M2G/docker-nestjs-ddd-graphql-postgresql.git"
  },
  "keywords": [
    "docker",
    "nodejs",
    "nestjs",
    "typescript",
    "mongodb",
    "ddd",
    "graphql"
  ],
  "dependencies": {
    "@nestjs/apollo": "^10.0.8",
    "@nestjs/common": "^8.4.3",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.4.3",
    "@nestjs/graphql": "^10.0.8",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mongoose": "^9.0.3",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.1.1",
    "@nestjs/typeorm": "^8.0.3",
    "@types/bcrypt": "^5.0.0",
    "apollo-server-core": "^3.6.6",
    "apollo-server-express": "^3.6.7",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "module-alias": "^2.2.2",
    "mongoose": "^6.2.9",
    "nodemon": "^2.0.15",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "ts-morph": "^13.0.3",
    "typeorm": "^0.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.4",
    "@nestjs/schematics": "^8.0.4",
    "@nestjs/testing": "^8.1.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "concurrently": "^6.5.1",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^28.0.3",
    "lint-staged": "^12.3.4",
    "prettier": "^2.4.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.6",
    "ts-jest": "^28.0.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4",
    "validate-branch-name": "^1.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "validate-branch-name && npm test",
      "post-merge": "git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep --quiet package-lock.json && npm ci"
    }
  },
  "lint-staged": {
    "*.(ts|tsx|graphql)": [
      "prettier --write  --ignore-path .eslintignore"
    ],
    "*.(ts|tsx)": [
      "eslint --fix"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
